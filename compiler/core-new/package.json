{
  "name": "lonac",
  "version": "0.10.0",
  "description": "Lona cross-platform code compiler",
  "main": "lib/index.js",
  "bin": "lib/bin.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "rm -rf ./lib && tsc --declaration",
    "prepublishOnly": "npm run build",
    "snapshot": "npm run snapshot:tokens",
    "snapshot:tokens": "ts-node src/bin.ts convert ../../examples/FlatTokens --format=tokens > ../../examples/generated/FlatTokens/output.json"
  },
  "repository": "https://github.com/airbnb/Lona",
  "author": "Mathieu Dutour",
  "license": "MIT",
  "dependencies": {
    "@lona/serialization": "0.0.18-pre-4",
    "glob": "^7.1.6",
    "lodash.intersection": "^4.4.0",
    "yargs": "^15.1.0"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/lodash.intersection": "^4.4.6",
    "@types/node": "^13.1.6",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.4"
  },
  "prettier": {
    "proseWrap": "never",
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false
  },
  "jest": {
    "testEnvironment": "node"
  }
}
